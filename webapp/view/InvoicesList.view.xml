<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<List
		id="invoicesList"
		class="sapUiResponsiveMargin"
		width="auto"
		items="{
            path : 'invoice>/Invoices',
            sorter : {
                path : 'ShipperName',
                group : true
            }
        }"
		>
		<items>
			<ObjectListItem title="{invoice>ProductName} x {invoice>Quantity}"/>
		</items>
	</List>
</mvc:View>